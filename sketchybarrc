PLUGIN_DIR="$HOME/.config/sketchybar/plugins"

##### Bar Appearance #####

sketchybar --bar height=30        \
                 blur_radius=30   \
                 position=bottom  \
                 sticky=off       \
                 padding_left=10  \
                 padding_right=10 \
                 color=0xff000000
# transparent looks nice but black is more macos-like


sketchybar --default icon.font="CorporativeSansRdAlt:Regular:20.0"  \
                     icon.color=0xffffffff                 \
                     label.font="CorporativeSansRdAlt:Regular:17.0" \
                     label.color=0xffffffff                \
                     padding_left=5                        \
                     padding_right=5                       \
                     label.padding_left=4                  \
                     label.padding_right=4                 \
                     icon.padding_left=4                   \
                     icon.padding_right=4

##### Adding Mission Control Space Indicators #####

SPACE_ICONS=("一" "二" "三" "四" "五" "六" "七" "八" "九" "十")
#SPACE_ICONS=("a" "b" "c" "d" "e" "f" "g" "h" "i" "j")

for i in "${!SPACE_ICONS[@]}"
do
  sid=$(($i+1))
  sketchybar --add space space.$sid left                                 \
             --set space.$sid associated_space=$sid                      \
                              icon=${SPACE_ICONS[i]}                     \
                              background.color=0x00ffffff                \
                              background.drawing=off                     \
                              label.drawing=off                          \
                              script="$PLUGIN_DIR/space.sh"              \
                              click_script="yabai -m space --focus $sid"
done

##### Adding Items #####

sketchybar --add item lock center                                  \
	   --set lock icon=󰽥                                       \
	   	click_script="pmset displaysleepnow"               \



sketchybar --add item space_separator left                         \
           --set space_separator padding_left=10                   \
                                 padding_right=10                  \
                                 label.drawing=off                 \
                                                                   \
           --add item front_app left                               \
           --set front_app       script="$PLUGIN_DIR/front_app.sh" \
                                 icon.drawing=on                   \
           --subscribe front_app front_app_switched


sketchybar --add item clock center                             \
           --set clock   update_freq=1                         \
                         script="$PLUGIN_DIR/clock.sh"         \
           --add item wifi right                               \
	   --set wifi    update_freq=30                        \
	   		 script="$PLUGIN_DIR/wifi.sh"          \
           --add item battery right                            \
           --set battery script="$PLUGIN_DIR/battery.sh"       \
                         update_freq=10                        \
           --subscribe battery system_woke power_source_change \



#!/usr/bin/env sh

sketchybar --update
